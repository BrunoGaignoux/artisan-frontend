{
    "compilerOptions": {
        "module": "CommonJS",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "target": "ES6",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "Node",
        "outDir": "./dist",
        "typeRoots": [
            "./node_modules/@types",
        ],
        "baseUrl": "./src",
        "paths": {
            "@modules/*": [
                "modules/*"
            ],
            "@base/*": [
                "*"
            ],
            "@generators/*": [
                "modules/generators/*"
            ],
            "@templates/*": [
                "templates/*"
            ],
        },
    },
    "lib": [
        "ES2020"
    ],
    "include": [
        "./src"
    ],
    "exclude": [
        "./node_modules",
    ]
}