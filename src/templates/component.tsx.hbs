import React, { MouseEvent, ReactElement, useEffect, useState } from 'react';
import { {{> name }}Type } from '{{> typePath }}/{{> name }}.types';
import * as S from '{{> componentPath }}/{{> name }}/{{> name }}.styles';

const {{> name }} = (props: {{> name }}Type): ReactElement => {
  const [state, set] = useState();

  const handleClick = (e: MouseEvent<HTMLInputElement>): void => {
    e.stopPropagation();
    e.preventDefault();

    set(!state);
  };

  useEffect(() => {
    set(!!state);
  }, []);

  return (
    <S.Container onClick={handleClick}>
      {props.children}
    </S.Container>
  );
};

export default {{> name }};
