{
  "name": "artisan-frontend",
  "version": "0.0.1",
  "description": "Artisan frontend generator base on plop",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "artisan": "plop --plopfile src/artisan.ts",
    "lint": "eslint --ext .js,.ts . --fix",
    "type-check": "tsc --noEmit",
    "build": "tsc",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
    "test": "jest --config jestconfig.json",
    "prepare" : "npm run build",
    "prepublishOnly" : "npm test && npm run lint",
    "preversion" : "npm run lint",
    "version" : "npm run format && git add -A src",
    "postversion" : "git push && git push --tags",
    "publish:patch": "npm version patch && npm publish",
    "publish:minor": "npm version minor && npm publish",
    "publish:major": "npm version major && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:BrunoGaignoux/artisan-frontend.git"
  },
  "keywords": [
    "artisan",
    "generator",
    "react"
  ],
  "author": "Bruno Gaignoux <gaignoux@gmail.com>",
  "license": "ISC",
  "homepage": "https://github.com/BrunoGaignoux/artisan-frontend#readme",
  "bugs": {
    "url": "https://github.com/BrunoGaignoux/artisan-frontend/issues"
  },
  "engines": {
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
  },
  "dependencies": {
    "@inquirer/select": "^1.0.1",
    "@types/inquirer": "^9.0.3",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^5.59.2",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "esm": "^3.2.25",
    "inquirer": "^9.2.0",
    "plop": "^3.1.2",
    "prettier": "^2.8.8",
    "ts-node": "^10.9.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.1",
    "@types/node": "^18.16.3",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4"
  },
  "files":[
    "lib/**/*"
  ]
}
